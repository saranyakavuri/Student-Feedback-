

@{
    ViewBag.Title = "Create / Modify BU";
}

<script>

    function loadPartialBUView(viewToLoad, id)
    {
        console.log("Button Click");
        console.log(viewToLoad);
        $('#viewLoadBUDiv').empty();
        if (viewToLoad === "Create") {
            $.get('@Url.Action("CreateBU", "LocationAdmin")', function (data) {
               // console.log(data);
                $('#viewLoadBUDiv').html(data);
            });
        }
         if (viewToLoad === "Edit") {
             console.log(id);
             $.get('@Url.Action("EditBU", "LocationAdmin")/' + id, function (data) {
             //   console.log(data);
                $('#viewLoadBUDiv').html(data);
            });

        }
        if (viewToLoad === "Delete") {
             console.log(id);
             $.get('@Url.Action("DeleteBU", "LocationAdmin")/' + id, function (data) {
             //   console.log(data);
                $('#viewLoadBUDiv').html(data);
            });

        }
    }

