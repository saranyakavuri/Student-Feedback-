             console.log(id);
             $.get('@Url.Action("EditSeg", "LocationAdmin")/' + id, function (data) {
             //   console.log(data);
                 $('#viewLoadSegDiv').html(data);
            });

        }
        if (viewToLoad === "Delete") {
